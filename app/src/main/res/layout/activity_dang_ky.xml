<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".DangNhap">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="Đăng ký"
        android:textColor="#205ED0"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:drawableRight="@drawable/icon_user"
        android:id="@+id/edtDkTaiKhoan"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Tài khoản"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtDkMatKhau"
        android:drawableRight="@drawable/icon_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edtDkEmail"
        android:drawableRight="@drawable/icon_email"
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:hint="Email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDkDangKy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custombtn"
        android:layout_marginTop="30dp"
        android:text="Đăng ký" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDkDangNhap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custombtn"
        android:text="Trở về đăng nhập" />

</LinearLayout>